<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="?attr/actionBarPopupTheme"
        app:navigationIcon="?attr/homeAsUpIndicator">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="fill_parent"
                android:layout_height="130dip"
                android:orientation="vertical"
                android:background="?attr/colorPrimary"
                android:gravity="center_horizontal">
                <com.cncom.app.kit.widget.CachedAspectRatioImageView
                    android:id="@+id/avator"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:src="@drawable/ic_default_avator"
                    app:uik_roundFeature="true"
                    android:scaleType="fitXY"
                    app:uik_radius="40dip"/>
                <TextView android:id="@+id/usr_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_login_or_register"
                    android:textColor="@color/blk"
                    android:textSize="18sp"
                    android:layout_marginTop="10dip"/>

            </LinearLayout>



            <LinearLayout android:id="@+id/account_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:id="@+id/button_home"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomPreference">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="#ff4A5567"
                        android:maxLines="2"/>
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_right_arrow_v2"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>

                <LinearLayout android:id="@+id/user_name_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomPreference">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="#ff4A5567"
                        android:maxLines="2"/>

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_right_arrow_v2"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>

                <LinearLayout android:id="@+id/activityCode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomPreference">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="#ff4A5567"
                        android:maxLines="2"/>
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_right_arrow_v2"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dip"
                    android:background="#e1e1e1"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/CustomPreference">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="#ff4A5567"
                    android:maxLines="2"/>
                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_right_arrow_v2"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_1px"
                android:background="#BABABA"/>

            <LinearLayout android:id="@+id/button_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/CustomPreference">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:text="@string/preferences_about_app_title"
                    android:textColor="#ff4A5567"
                    android:maxLines="2"/>
                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_right_arrow_v2"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_1px"
                android:background="#BABABA"/>

            <LinearLayout android:id="@+id/button_clear_cache"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/CustomPreference">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:text="@string/preferences_clear_cache_title"
                    android:textColor="#ff4A5567"
                    android:maxLines="2"/>
                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_right_arrow_v2"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_1px"
                android:background="#BABABA"/>

            <LinearLayout android:id="@+id/debugMode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dip"
                    android:background="#e1e1e1"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomPreference">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="#ff4A5567"
                        android:maxLines="2"/>
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_right_arrow_v2"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>

                <LinearLayout android:id="@+id/button_export_db"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomPreference">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:text="@string/preferences_export_db"
                        android:textColor="#ff4A5567"
                        android:maxLines="2"/>
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_right_arrow_v2"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/line_1px"
                    android:background="#BABABA"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button android:id="@+id/button_exit"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        style="@style/DefaultShapeButton"
        android:text="@string/button_exit"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="20dip"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>